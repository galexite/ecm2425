<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EventDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="This is an event description." />

        <Button
            android:id="@+id/open_in_browser_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:drawableEnd="@drawable/ic_open_in_new_black_24dp"
            android:drawableRight="@drawable/ic_open_in_new_black_24dp"
            android:gravity="start|center_vertical"
            android:text="@string/open_in_browser" />
    </LinearLayout>
</androidx.cardview.widget.CardView>